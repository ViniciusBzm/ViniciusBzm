// Prisma schema for Finance Control system
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id        Int      @id @default(autoincrement())
  title     String
  type      String   // "income" or "expense"
  amount    Float
  category  String
  createdAt DateTime @default(now())
}
